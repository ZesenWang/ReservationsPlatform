<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
<LinearLayout
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginTop="15dp"
        android:background="@drawable/note_1"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="今天中午吃火锅"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textDirection="locale" />
    </RelativeLayout>
    <ImageView
        android:src="@drawable/pin"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="15dp"
            android:background="@drawable/note_2"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <TextView
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="买一盒口香糖，让口臭的病人先吃一粒"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <ImageView
            android:id="@+id/pin2"
            android:src="@drawable/pin"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="15dp"
            android:background="@drawable/note_3"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <TextView
                android:layout_margin="15dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="给猫主子看牙"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <ImageView
            android:src="@drawable/pin"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="15dp"
            android:background="@drawable/note_4"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <TextView
                android:layout_margin="15dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="买iPhone X"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <ImageView
            android:src="@drawable/pin"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
<LinearLayout
android:id="@+id/buttonGroup"
android:background="#fff"
android:layout_alignParentBottom="true"
android:layout_width="match_parent"
android:layout_height="wrap_content">
<TextView
    android:gravity="center"
    android:onClick="onClickReservation"
    android:text="预约情况"
    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
    android:layout_weight="1"
    android:layout_width="0dp"
    android:layout_height="wrap_content" />
<TextView
    android:gravity="center"
    android:onClick="onClickNews"
    android:text="行业资讯"
    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
    android:layout_weight="1"
    android:layout_width="0dp"
    android:layout_height="wrap_content" />
<TextView
    android:gravity="center"
    android:onClick="onClickNote"
    android:text="备忘录"
    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
    android:layout_weight="1"
    android:layout_width="0dp"
    android:layout_height="wrap_content" />
</LinearLayout>
<View
android:background="#000"
android:layout_above="@id/buttonGroup"
android:layout_width="match_parent"
android:layout_height="1dp"/>
</RelativeLayout>